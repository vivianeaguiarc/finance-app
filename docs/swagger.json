
{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Finance App API",
        "description": "API for Finance Application that allows users to manage their finances."
    },
    "produces": ["application/json"],
    "paths": {
        "/api/users": {
            "post": {
                "summary": "Create a new user",
                "description": "Endpoint to create a new user in the Finance App.",
                "tags": ["Users"],
                "consumes": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User payload",
                        "required": true,
                        "schema": { "$ref": "#/definitions/CreateUserParams" }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "Invalid parameters"
                                }
                            },
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },
        "/api/users/{userId}": {
            "get": {
                "summary": "Get user by ID",
                "description": "Retrieve a specific user by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to fetch (UUID format)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User found",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": { "$ref": "#/definitions/UserNotFoundResponse" }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "delete": {
                "summary": "Delete user by ID",
                "description": "Delete a specific user by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to delete (UUID format)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully",
                        "schema": {
                            "$ref": "#/definitions/DeleteUserResponse"
                        },
                        "examples": {
                            "application/json": {
                                "message": "User deleted successfully",
                                "deleted": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": { "$ref": "#/definitions/UserNotFoundResponse" }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        }
    },
    "definitions": {
        "CreateUserParams": {
            "type": "object",
            "properties": {
                "first_name": { "type": "string", "example": "John" },
                "last_name": { "type": "string", "example": "Doe" },
                "email": { "type": "string", "example": "john@doe.com" },
                "password": { "type": "string", "example": "password123" }
            },
            "required": ["first_name", "last_name", "email", "password"]
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "123e4567-e89b-12d3-a456-426614174000"
                },
                "first_name": { "type": "string", "example": "John" },
                "last_name": { "type": "string", "example": "Doe" },
                "email": { "type": "string", "example": "john@doe.com" },
                "password": { "type": "string", "example": "password123" }
            },
            "required": ["first_name", "last_name", "email", "password"]
        },
        "UserNotFoundResposnse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "User not found" }
            },
            "required": ["error"]
        },
        "DeleteUserResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "User deleted successfully"
                },
                "deleted": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string", "format": "uuid" }
                    },
                    "required": ["id"]
                }
            },
            "required": ["message", "deleted"]
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "User not found" }
            },
            "required": ["error"]
        }
    }
}
