{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Finance App API",
        "description": "API for Finance Application that allows users to manage their finances and transactions."
    },
    "produces": ["application/json"],
    "consumes": ["application/json"],
    "tags": [
        { "name": "Users", "description": "Endpoints for user management" },
        {
            "name": "Transactions",
            "description": "Endpoints for financial transactions"
        }
    ],
    "paths": {
        "/api/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Create a new user",
                "description": "Endpoint to create a new user in the Finance App.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "User payload",
                        "schema": { "$ref": "#/definitions/CreateUserParams" }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },
        "/api/users/{userId}": {
            "get": {
                "tags": ["Users"],
                "summary": "Get user by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User found",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "patch": {
                "tags": ["Users"],
                "summary": "Update user by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "Updated user fields",
                        "schema": { "$ref": "#/definitions/UpdateUserParams" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User updated",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "delete": {
                "tags": ["Users"],
                "summary": "Delete user by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully",
                        "schema": {
                            "$ref": "#/definitions/DeleteUserResponse"
                        },
                        "examples": {
                            "application/json": {
                                "message": "User deleted successfully",
                                "deleted": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },

        "/api/transactions": {
            "post": {
                "tags": ["Transactions"],
                "summary": "Create transaction",
                "description": "Cria uma nova transação para um usuário existente.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "Transaction payload",
                        "schema": {
                            "$ref": "#/definitions/CreateTransactionParams"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Transaction created",
                        "schema": { "$ref": "#/definitions/Transaction" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },

        "/api/transactions/{transactionId}": {
            "get": {
                "tags": ["Transactions"],
                "summary": "Get transaction by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "transactionId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "Transaction ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transaction found",
                        "schema": { "$ref": "#/definitions/Transaction" }
                    },
                    "404": {
                        "description": "Transaction not found",
                        "schema": { "$ref": "#/definitions/NotFoundResponse" }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "patch": {
                "tags": ["Transactions"],
                "summary": "Update transaction by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "transactionId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "Transaction ID"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "Transaction fields to update",
                        "schema": {
                            "$ref": "#/definitions/UpdateTransactionParams"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transaction updated",
                        "schema": { "$ref": "#/definitions/Transaction" }
                    },
                    "404": {
                        "description": "Transaction not found",
                        "schema": { "$ref": "#/definitions/NotFoundResponse" }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "delete": {
                "tags": ["Transactions"],
                "summary": "Delete transaction by ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "transactionId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "Transaction ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transaction deleted successfully",
                        "schema": {
                            "$ref": "#/definitions/DeleteTransactionResponse"
                        },
                        "examples": {
                            "application/json": {
                                "message": "Transaction deleted successfully",
                                "deleted": {
                                    "id": "11111111-2222-3333-4444-555555555555"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Transaction not found",
                        "schema": { "$ref": "#/definitions/NotFoundResponse" }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },

        "/api/users/{userId}/transactions": {
            "get": {
                "tags": ["Transactions"],
                "summary": "List transactions by user",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID"
                    },
                    {
                        "in": "query",
                        "name": "type",
                        "required": false,
                        "type": "string",
                        "enum": ["EXPENSE", "EARNING", "INVESTMENT"],
                        "description": "Filter by type"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transactions list",
                        "schema": {
                            "type": "array",
                            "items": { "$ref": "#/definitions/Transaction" }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },

        "/api/transactions/balance/{userId}": {
            "get": {
                "tags": ["Transactions"],
                "summary": "Get balance by user",
                "description": "Retorna o saldo total e totais por tipo para um usuário.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Balance calculated",
                        "schema": { "$ref": "#/definitions/BalanceResponse" }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        }
    },

    "definitions": {
        "CreateUserParams": {
            "type": "object",
            "required": ["first_name", "last_name", "email", "password"],
            "properties": {
                "first_name": { "type": "string", "example": "John" },
                "last_name": { "type": "string", "example": "Doe" },
                "email": { "type": "string", "example": "john@doe.com" },
                "password": { "type": "string", "example": "password123" }
            }
        },
        "UpdateUserParams": {
            "type": "object",
            "properties": {
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
            }
        },
        "User": {
            "type": "object",
            "required": ["id", "first_name", "last_name", "email"],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "example": "123e4567-e89b-12d3-a456-426614174000"
                },
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
            }
        },
        "Transaction": {
            "type": "object",
            "required": ["id", "user_id", "name", "date", "type", "amount"],
            "properties": {
                "id": { "type": "string", "format": "uuid" },
                "user_id": { "type": "string", "format": "uuid" },
                "name": { "type": "string" },
                "date": { "type": "string", "example": "2025-11-11T12:00:00Z" },
                "type": {
                    "type": "string",
                    "enum": ["EXPENSE", "EARNING", "INVESTMENT"]
                },
                "amount": { "type": "number", "example": 1200.5 }
            }
        },
        "CreateTransactionParams": {
            "type": "object",
            "required": ["user_id", "name", "date", "type", "amount"],
            "properties": {
                "user_id": { "type": "string", "format": "uuid" },
                "name": { "type": "string" },
                "date": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": ["EXPENSE", "EARNING", "INVESTMENT"]
                },
                "amount": { "type": "number" }
            }
        },
        "UpdateTransactionParams": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "date": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": ["EXPENSE", "EARNING", "INVESTMENT"]
                },
                "amount": { "type": "number" }
            }
        },
        "BalanceResponse": {
            "type": "object",
            "properties": {
                "user_id": { "type": "string", "format": "uuid" },
                "total_earnings": { "type": "number", "example": 8500 },
                "total_expenses": { "type": "number", "example": 4200 },
                "total_investments": { "type": "number", "example": 1200 },
                "balance": { "type": "number", "example": 3100 }
            }
        },
        "DeleteUserResponse": {
            "type": "object",
            "properties": {
                "message": { "type": "string" },
                "deleted": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string", "format": "uuid" }
                    }
                }
            }
        },
        "DeleteTransactionResponse": {
            "type": "object",
            "properties": {
                "message": { "type": "string" },
                "deleted": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string", "format": "uuid" }
                    }
                }
            }
        },
        "InvalidParamsResponse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "Invalid parameter" }
            }
        },
        "UserNotFoundResponse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "User not found" }
            }
        },
        "NotFoundResponse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "Resource not found" }
            }
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Internal server error"
                }
            }
        }
    }
}
