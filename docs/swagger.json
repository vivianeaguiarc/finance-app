{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Finance App API",
        "description": "API for Finance Application that allows users to manage their finances."
    },
    "produces": ["application/json"],
    "paths": {
        "/api/users": {
            "post": {
                "summary": "Create a new user",
                "description": "Endpoint to create a new user in the Finance App.",
                "tags": ["Users"],
                "consumes": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User payload",
                        "required": true,
                        "schema": { "$ref": "#/definitions/CreateUserParams" }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },
        "/api/users/{userId}": {
            "get": {
                "summary": "Get user by ID",
                "description": "Retrieve a specific user by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to fetch (UUID format)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User found successfully",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "delete": {
                "summary": "Delete user by ID",
                "description": "Delete a specific user by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to delete (UUID format)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully",
                        "schema": {
                            "$ref": "#/definitions/DeleteUserResponse"
                        },
                        "examples": {
                            "application/json": {
                                "message": "User deleted successfully",
                                "deleted": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            },
            "patch": {
                "summary": "Update user by ID",
                "description": "Update a specific user's details by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to update (UUID format)"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User payload with updated fields",
                        "required": true,
                        "schema": { "$ref": "#/definitions/CreateUserParams" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User updated successfully",
                        "schema": { "$ref": "#/definitions/User" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        },
        "/api/users/{userId}/balance": {
            "get": {
                "summary": "Get user balance by ID",
                "description": "Retrieve the financial balance details of a specific user by their unique ID.",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user to fetch balance for (UUID format)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User balance retrieved successfully",
                        "schema": { "$ref": "#/definitions/UserBalance" }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "$ref": "#/definitions/InvalidParamsResponse"
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/UserNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": { "$ref": "#/definitions/ErrorResponse" }
                    }
                }
            }
        }
    },
    "definitions": {
        "CreateUserParams": {
            "type": "object",
            "properties": {
                "first_name": { "type": "string", "example": "John" },
                "last_name": { "type": "string", "example": "Doe" },
                "email": { "type": "string", "example": "john@doe.com" },
                "password": { "type": "string", "example": "password123" }
            },
            "required": ["first_name", "last_name", "email", "password"]
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "123e4567-e89b-12d3-a456-426614174000"
                },
                "first_name": { "type": "string", "example": "John" },
                "last_name": { "type": "string", "example": "Doe" },
                "email": { "type": "string", "example": "john@doe.com" },
                "password": { "type": "string", "example": "password123" }
            },
            "required": ["first_name", "last_name", "email", "password"]
        },
        "UserBalance":{
            "type": "object",
            "properties": {
                "earnings": {
                    "type": "string",
                    "example": "5000.00"
                },
                "balance": { "type": "number", "example": 1000.50 },
                "investments": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": { "type": "string", "example": "stocks" },
                            "amount": { "type": "number", "example": 2500.00 }
                        },
                        "required": ["type", "amount"]
                    }
                }, "expenses": {
                    "type": "number",
                    "example": 1500.75
                }
            },
            "required": ["earnings", "balance", "investments", "expenses"]
        },
        "UserNotFoundResponse": {
            "type": "object",
            "properties": {
                "error": { "type": "string", "example": "User not found" }
            },
            "required": ["error"]
        },
        "InvalidParamsResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Invalid param (this depends on the specific parameter)"
                }
            },
            "required": ["error"]
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Internal server error"
                }
            },
            "required": ["error"]
        },
        "DeleteUserResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "User deleted successfully"
                },
                "deleted": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string", "format": "uuid" }
                    },
                    "required": ["id"]
                }
            },
            "required": ["message", "deleted"]
        }
    }
}
